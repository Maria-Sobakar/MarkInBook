<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:backgroundTint="@color/purple_1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/serverLessonTimeTextView"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/serverLessonNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:textSize="20sp" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serverLessonHomeworkImageButton"
            android:backgroundTint="@color/purple_1"
            android:src="@drawable/ic_no_homework"/>

        <TextView
            android:id="@+id/markTextView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>