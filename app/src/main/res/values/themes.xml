<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarkInBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_2</item>
        <item name="colorPrimaryVariant">@color/purple_3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="android:fontFamily">@font/cutive_mono_regular</item>-->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="toolbarStyle">@style/MyToolBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowTheme</item>
    </style>

    <style name="MyToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">@font/anonymous_pro_regular</item>
        <item name="color">@color/purple_2</item>
    </style>

    <style name="MyOverflowTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/anonymous_pro_regular</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/anonymous_pro_regular</item>
    </style>

</resources>
